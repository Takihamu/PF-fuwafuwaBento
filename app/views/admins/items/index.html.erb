<div class="container">
  <div class="row">
    <div class="col-9">
      <h2 class="mb-3">商品一覧</h2>
    </div>
  </div>
    <div class="row">
      <div class="col-12">
        <table class="table">
          <thead class="" style="background-color:#f2c9ac;">
<%= link_to "商品を追加する", new_admins_item_path, class:"far fa-plus-square", :style => "color: black;" %>
            <tr>
              <th>商品ID</th>
              <th></th>
              <th>商品名</th>
              <th>税別価格</th>
              <th>コース一覧</th>
              <th>ステータス</th>
              <th></th>
            </tr>
           </thead>


          <tbody class="table-body" style="background-color:#fddea5;">
            <% @item.each do |item| %>

              <tr>
                <td><%= item.id %></td>
                <td><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></td>
                <td><%= link_to item.item_name, admins_item_path(item.id) %></td>
                <td><%= item.price %></td>
                <td><%= item.course_name_i18n %></td>
                <td>
                  <% if item.item_status? %>
                    <span class="text-success">販売中</span>
                  <% else %>
                    <span class="text-secondary">販売停止</span>
                  <% end %>
                </td>
                <td><%= link_to "商品を編集する", edit_admins_item_path(item.id),class:"far fa-plus-square", :style => "color: black;" %></td>

              </tr>

            <% end %>

          <div class="col-3 text-right">

        </tbody>
      </table>
    </div>
  </div>
  </div>