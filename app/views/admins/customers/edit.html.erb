<h2><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h2>
  <%= form_for(@customer, url: admins_customer_path(@customer.id)) do |f| %>

  <tr>
    <th><%= f.label :id, "会員ID" %></th>
    <td><%= @customer.id %></td>
  </tr>

  <tr>
    <th><%= f.label :名前 %></th>
    <td>（姓）<%= f.text_field :last_name %></td>
    <td>（名）<%= f.text_field :first_name %></td>
  </tr>

  <tr>
    <th><%= f.label :郵便番号 %></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>

  <tr>
    <th><%= f.label :住所 %></th>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th><%= f.label :電話番号 %></th>
    <td><%= f.text_field :tel %></td>
  </tr>

  <tr>
    <th><%= f.label :メールアドレス %></th>
     <td><%= f.email_field :email %></td>
  </tr>

  <%= f.submit "変更を保存" ,class:"btn btn-success" %>
  <% end %>