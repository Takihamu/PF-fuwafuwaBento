<div class='fixed-top'>
  <nav class="navbar navbar-expand-lg navbar-light bg-info">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand", data: {"turbolinks" => false} do %>
        <%= image_tag 'headlogo.png', { height:80 } %>
      <% end %>

      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <span class="navbar-text">
            ようこそ!<%= current_customer.last_name %>さん
          </span>
          <li class="nav-item">
            <%= link_to cart_items_path, class: "nav-link" do %>
              <div id="cart_items_count">
                <% if cart_items.present? %>
                  <%= cart_items.count %>
                <% end %>
              </div>
              <i class="fas fa-cart-plus"></i>
             <% end %>
          </li>

            <%= search_form_for q, url: search_items_path, class: "form-inline" do |f| %>
              <%= f.search_field :item_name_cont, class: "form-control mr-sm-2" %>
            <%= f.submit '検索' %>
            <% end %>

        <% else %>
        <%= link_to "新規会員登録", new_customer_registration_path,class: "btn mr-5", style: "background-color: #e96b22; color: white;" %>
      <%= link_to "会員はこちら", new_customer_session_path, class: "btn", style: "background-color: #6599cc; color: white;" %>
        <% end %>
      </ul>
    </div>
  </nav>
 </div>