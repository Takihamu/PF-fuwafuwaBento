<div class='fixed-top'>
  <nav class="navbar navbar-expand-lg navbar-light bg-info">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand", data: {"turbolinks" => false} do %>
        <%= image_tag 'headlogo.png', { height:80 } %>
      <% end %>

      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <span class="navbar-text">
            ようこそ!<%= current_customer.last_name %>さん
          </span>
          <li class="nav-item">
            <%= link_to cart_items_path, class: "nav-link" do %>
              <div id="cart_items_count">
                <% if cart_items.present? %>
                  <%= cart_items.count %>
                <% end %>
              </div>
              <i class="fas fa-cart-plus"></i>
             <% end %>
          </li>
          <form class="form-inline">
            <%= search_form_for q, url: search_items_path do |f| %>
              <%= f.search_field :item_name_cont, class: "form-control mr-sm-2" %>
            <%= f.submit '検索' %>
            <% end %>
          </form>
        <% else %>
          <li class="nav-item">
            <%= link_to "About", homes_about_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
 </div>