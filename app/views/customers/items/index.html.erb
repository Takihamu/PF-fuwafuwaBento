<h1>商品一覧</h1>
  <% @items.each do |item| %>
  <li>
    <%= link_to item_path(item.id) do %>
      <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no-image.jpg" %>
    <% end %>
  </li>
  <li><%= link_to item.item_name, item_path(item.id) %></li>
  <li><%= item.add_tax_price.to_s(:delimited) %></li>
<% end %>