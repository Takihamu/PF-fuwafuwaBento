<div class='container'>
  <div class='row mt-4 mb-2'>
    <h1>商品一覧</h1>
  </div>
</div>
<div class='col-md-9 offset-md-1'>
  <div class='row'>
    <% @items.each do |item| %>
    <div class='col-4'>
      <ul style="list-style: none;">
        <li>
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no-image.jpg" %>
          <% end %>
        </li>
        <li><%= link_to item.item_name, item_path(item.id) %></li>
        <li><%= item.add_tax_price.to_s(:delimited) %></li>
      </ul>
    </div>
  <% end %>
</div>
</div>
</div>