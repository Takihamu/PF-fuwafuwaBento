<div class="container" id="cartritems-container">
  <h1 class="text title-text">検索結果</h1>
  <div class="row mt-5">
  <table class="table table-bordered table-hover">
   <thead class="table-active text">
     <tr bgcolor="#fce4ec">
       <th>商品名</th>
       <th>商品説明</th>
       <th>熱量</th>
       <th>価格(並盛）</th>
       <th></th>
     </tr>
    <tbody bgcolor="#fcf7f7">
      <% @results.each do |item| %>
       <tr class="light-text">
        <td><%= item.item_name %></td>
        <td><%= item.detail %></td>
        <td><%= item.energy %>kcal</td>
        <td>¥<%= item.add_tax_price.to_s(:delimited) %>(税込)</td>
        <td><%= link_to '詳細を見る', item_path(item.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>