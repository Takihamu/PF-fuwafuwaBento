<div class="container" id="cartritems-container">
  <h3 class="text title-text">注文履歴一覧</h3>
  <% if @orders.exists? %>
  <div class="row">
    <div class="offset-1 text-center">

    </div>
  </div>



    <div class="row mt-5">
      <table class="table table-bordered table-hover">
        <thead class="table-active text">
          <tr bgcolor="#fce4ec">
           
            <th>注文日</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>
         <tbody bgcolor="#fcf7f7">
          <% @orders.each do |order| %>
          <tr class="light-text">
            <td><%= order.created_at.strftime('%Y年%m月%d日') %></td>

            <td>
            <% order.order_items.all.each do |order| %>
              <%= order.item.item_name %><br>
            <% end %>



            <td>¥<%= order.total_price.to_s(:delimited) %></td>
            <td>
              <%= link_to "表示する", order_path(order.id) %>
            </td>
          </td>
          <% end %>
        </table>
      </div>
      <% else %>
      <div class="text-center">
           <h2>注文履歴がありません</h2>
      </div>
       <% end %>
    </div>