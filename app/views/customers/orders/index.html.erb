<h3>注文履歴一覧</h3>

<% if @orders.exists? %>
<tr>
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払金額</th>
  <th>注文詳細</th>
</tr>

<% @orders.each do |order| %>
<td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
<td>
  〒<%= order.shipping_postal_code %><br>
    <%= order.delivery_address %><br>
     <%= order.receiver_name %> 様
</td>

<td>
  <% order.order_items.all.each do |order| %>
    <%= order.item.item_name %><br>
  <% end %>

  <td>¥<%= order.total_price %></td>
  <td>
    <%= link_to "表示する", order_path(order.id) %>
  </td>
  <% end %>

<% else %>
 <h2>注文履歴がありません</h2>
 <% end %>